doctype html
html
  head
    title= title
    //link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css", integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2", crossorigin="anonymous")
    script(src="https://ajax.googleapis.com/ajax/libs/d3js/6.2.0/d3.min.js")
  body
      nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
        div(class="collapse navbar-collapse" id="navbarNav")
          form(class="form-inline my-2 my-lg-0" action="/games/search")
            select(id="category" name="category" class="form-control")
              option(value="default") All
              option(value="Area Control") Area Control
              option(value="Eurogame") Eurogame
              option(value="Roll-and-move") Roll-and-move
              option(value="Drafting") Drafting
              option(value="Engine-building") Engine-building
              option(value="Story Telling") Story Telling
            input(id="title" name="title" class="form-control mr-sm-2" type="search" placeholder="Search Product" aria-label="Search")
            button(class="btn btn-outline-success my-2 my-sm-0" type="submit") Search
          div(class="navbar-nav")
            a(class="nav-item nav-link" href="#") Login
            a(class="nav-item nav-link" href="#") Register
            a(class="nav-item nav-link" href="#") Cart
            a(class="nav-item nav-link" href="/games/products") Products
            a(class="nav-item nav-link" href="#") Purchase History
    block content
