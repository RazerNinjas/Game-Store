extends layout

append stylesheets
    link(rel="stylesheet" href="/stylesheets/additem.css")

block content
    div(class="container")
        form(action="/api/game" method="POST" enctype="multipart/form-data")
            div(class="form-group")
                div
                label(for="title") Title
                input(type="text" class="form-control" name="title" id="title" required)
            div(class="form-group")
                label(for="players") Players
                input(type="text" class="form-control" name="players" id="players" required)
            div(class="form-group")
                label(for="category") Category
                select(class="form-control" name="category" id="category" required)
                    option(value="Area Control") Area Control
                    option(value="Eurogame") Eurogame
                    option(value="Roll-and-move") Roll-and-move
                    option(value="Drafting") Drafting
                    option(value="Engine-building") Engine-building
                    option(value="Story Telling") Story Telling
            div(class="form-group")
                label(for="brand") Brand
                input(type="text" class="form-control" name="brand" id="brand" required)
            div(class="form-group")
                label(for="coverImg") Cover image
                div
                    input(type="file" class="" name="coverImg" id="coverImg" accept="image/*" required)
            div(class="form-group")
                label(for="boardImg") Board image
                div
                    input(type="file" class="" name="boardImg" id="boardImg" accept="image/*" required)
            div(class="form-group")
                label(for="price") Price
                input(type="text" class="form-control" name="price" id="price" required)
            div(class="form-group")
                label(for="quantity") Quantity
                input(type="text" class="form-control" name="quantity" id="quantity" required)
            button(type="submit" class="btn btn-primary") Add Game